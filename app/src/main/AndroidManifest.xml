<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.sagaoftherealms.demo.shiftchat">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ShiftChatApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MainTheme">
        <activity
            android:name=".view.WelcomeActivity"
            android:theme="@style/MainTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ProfileActivity" />
        <activity android:name=".view.ChatListActivity" />
        <activity android:name=".view.ChatMessageActivity"></activity>
    </application>

</manifest>